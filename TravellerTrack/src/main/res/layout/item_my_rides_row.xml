<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rideslayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_color"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/jmst" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3">


                <TextView android:id="@+id/guest_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/text_medium"
                    android:textStyle="bold"

                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:paddingRight="16dp"
                    android:text="User name" />

                <TextView android:id="@+id/booking_id"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/text_medium"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:paddingRight="16dp"
                    android:text="Booking id" />
                <TextView android:id="@+id/car_no"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/text_medium"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:paddingRight="16dp"
                    android:text="Car no" />

                <TextView android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    style="@style/text_small"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:gravity="top|left"
                    android:paddingRight="16dp"
                    android:text="House Number 2304, Pocket-1, Subhas Nagar, New Delhi India" />


            </LinearLayout>

     </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <TextView android:id="@+id/pickup_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10.0dip"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Pickup Date : 07-08-2016"
                android:textSize="@dimen/textsmall" />

            <TextView android:id="@+id/pickup_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10.0dip"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Pickup Time : 07:30 AM"
                android:textSize="@dimen/textsmall" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>